<!DOCTYPE html>
<html>
  <head>
    <title>A&M Creamery</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
<title>Manager Page</title>
  <body>
    

    <!-- Navbar goes here -->
  <nav>
  <nav>
    <% if session[:role] == 'admin' %>
      <%= render partial: 'partials/admin_nav' %>
    <% elsif session[:role] == 'manager'  %>
      <%= render partial: 'partials/manager_nav' %>
    <% else %>
      <%= render partial: 'partials/employee_nav' %>
    <% end  %>
  </nav>
  </nav>

    <div class="row" style="height:100%">
      <div class="col s12 center" style="height:100%">
        <!-- Teal page content  -->
          <!-- MAIN CONTENT GOES HERE -->
              <h1>Manager Page</h1>
              <br/>
              <br/>
              <br/>
    <div class = "row">
      <div class="col s3 push-s6 center" >
        <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Shifts</span>
          <p></p>
        </div>
        <div class="card-action">
          <a href="/shifts">List Shifts</a>
          <a href="/shift_jobs">List Shift Jobs</a>
        </div>
      </div>
      </div>
      
      <div class="col s3 center" >
        <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Jobs</span>
          <p></p>
        </div>
        <div class="card-action">
          <a href="/jobs">List Jobs</a>
        </div>
      </div>
      </div>
    </div>
    <div class = "row">
      <div class="col s3 push-s6 center" >
        <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Flavors</span>
          <p></p>
        </div>
        <div class="card-action">
          <a href="/flavors">List Flavors</a>
        </div>
      </div>
      </div>
      
      <div class="col s3 center" >
        <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">View Profile</span>
          <p></p>
        </div>
        <div class="card-action">
          <% user = User.find(session[:user_id]) %>
          <% emp_id = user.employee.id %>
          <a href=" /employees/<%=emp_id%>">Profile</a>
        </div>
      </div>
      </div>
    </div>
      </div>
    </div>
    

    
  <footer class="page-footer col s12 center" style="position:fixed;bottom:0;width:100%; padding:0">
        <%= render partial: 'partials/footer' %>

  </footer>
</body>


              <%= javascript_include_tag "application" %>
           <% flash.each do |message_type, message| %>
           <%= message %>
           <% end %>
           
</html>
