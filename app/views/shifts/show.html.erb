<div class="container center">
  <h2>Shift Details</h2>
<p id="notice"><%= notice %></p>

<p>
  <strong>Date:</strong>
  <%= @shift.date %>
</p>

<p>
  <strong>Start time:</strong>
  <%= @shift.start_time %>
</p>

<p>
  <strong>End time:</strong>
  <%= @shift.end_time %>
</p>

<p>
  <strong>Notes:</strong>
  <%= @shift.notes %>
</p>

<p>
  <strong>Assignment:</strong>
  <%= @shift.assignment.assignment_name %>
</p>

<%= link_to 'Edit', edit_shift_path(@shift), :class=> "waves-effect waves-light btn light-blue" %> |
<%= link_to 'Back', shifts_path, :class=> "waves-effect waves-light btn red center" %>

</div>