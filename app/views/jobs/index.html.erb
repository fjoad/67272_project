<div class="container center">
<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.name %></td>
        <td><%= job.description %></td>
        <td><%= job.active %></td>
        <% if session[:role] == 'admin' %>
          <td><%= link_to 'Show', job, :class=> "waves-effect waves-light btn green" %></td>
          <td><%= link_to 'Edit', edit_job_path(job), :class=> "waves-effect waves-light btn light-blue" %></td>
          <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' }, :class=> "waves-effect waves-light btn red" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if session[:role] == 'admin' %>
  <%= link_to 'New Job', new_job_path, :class=> "waves-effect waves-light btn teal center" %>
<% end %>
<br/><br/>
</div>